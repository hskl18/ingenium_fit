<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mgkf.mapper.GiveLikeMapper">

    <resultMap type="GiveLike" id="GiveLikeResult">
        <result property="id" column="id"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="createDept" column="create_dept"/>
        <result property="delFlag" column="del_flag"/>
        <result property="userId" column="user_id"/>
        <result property="objectId" column="object_id"/>
        <result property="objectType" column="object_type"/>
    </resultMap>

    <sql id="selectGiveLikeVo">
        select id,
               create_by,
               create_time,
               update_by,
               update_time,
               create_dept,
               del_flag,
               user_id,
               object_id,
               object_type
        from t_give_like
    </sql>

    <select id="selectGiveLikeList" parameterType="GiveLike" resultMap="GiveLikeResult">
        <include refid="selectGiveLikeVo"/>
        <where>
            <if test="delFlag != null ">and del_flag = #{delFlag}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="objectId != null ">and object_id = #{objectId}</if>
            <if test="objectType != null ">and object_type = #{objectType}</if>
            <if test="objectIdList != null and objectIdList.size() > 0">
                and object_id in
                <foreach item="objectId" collection="objectIdList" open="(" close=")" separator=",">
                    #{objectId}
                </foreach>
            </if>
            <if test="createStartTime != null">
                and create_time >= #{createStartTime}
            </if>
            <if test="createEndTime != null">
                and create_time <![CDATA[<=]]> #{createEndTime}
            </if>
        </where>
    </select>

    <select id="selectGiveLikeById" parameterType="Long" resultMap="GiveLikeResult">
        <include refid="selectGiveLikeVo"/>
        where id = #{id}
    </select>

    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(*) FROM t_give_like WHERE del_flag != 2
    </select>

    <select id="selectGiveLikeRanking" resultType="com.ruoyi.mgkf.domain.GiveLike">
        SELECT user_id, COUNT(*) AS giveLikeNum FROM t_give_like
        WHERE del_flag != 2
        GROUP BY user_id
        ORDER BY giveLikeNum DESC
        LIMIT 3
    </select>

    <insert id="insertGiveLike" parameterType="GiveLike">
        insert into t_give_like
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createDept != null">create_dept,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="userId != null">user_id,</if>
            <if test="objectId != null">object_id,</if>
            <if test="objectType != null">object_type,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createDept != null">#{createDept},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="userId != null">#{userId},</if>
            <if test="objectId != null">#{objectId},</if>
            <if test="objectType != null">#{objectType},</if>
        </trim>
    </insert>

    <insert id="addGiveLike">
        insert into t_give_like (create_time, update_time, user_id, object_id, object_type)
        VALUES (#{createTime}, #{updateTime}, #{userId}, #{objectId}, #{objectType})
        ON DUPLICATE KEY
            UPDATE del_flag    = IF(del_flag = 1, 2, 1),
                   create_time = #{createTime},
                   update_time = #{updateTime}
    </insert>

    <update id="updateGiveLike" parameterType="GiveLike">
        update t_give_like
        <trim prefix="SET" suffixOverrides=",">
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createDept != null">create_dept = #{createDept},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="objectId != null">object_id = #{objectId},</if>
            <if test="objectType != null">object_type = #{objectType},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGiveLikeById" parameterType="Long">
        delete
        from t_give_like
        where id = #{id}
    </delete>

    <delete id="deleteGiveLikeByIds" parameterType="String">
        delete from t_give_like where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>