<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mgkf.mapper.UserMessageMapper">

    <resultMap type="UserMessage" id="UserMessageResult">
        <result property="id" column="id"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createDept" column="create_dept"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="titleZh" column="title_zh"/>
        <result property="titleEn" column="title_en"/>
        <result property="sketchZh" column="sketch_zh"/>
        <result property="sketchEn" column="sketch_en"/>
        <result property="contentZh" column="content_zh"/>
        <result property="contentEn" column="content_en"/>
        <result property="type" column="type"/>
        <result property="userId" column="user_id"/>
        <result property="objectId" column="object_id"/>
        <result property="isRead" column="is_read"/>
    </resultMap>

    <sql id="selectUserMessageVo">
        select id,
               del_flag,
               create_dept,
               create_by,
               create_time,
               update_by,
               update_time,
               title_zh,
               title_en,
               sketch_zh,
               sketch_en,
               content_zh,
               content_en,
               type,
               user_id,
               object_id,
               is_read
        from t_user_message
    </sql>

    <select id="selectUserMessageList" parameterType="UserMessage" resultMap="UserMessageResult">
        <include refid="selectUserMessageVo"/>
        <where>
            <if test="delFlag != null ">and del_flag = #{delFlag}</if>
            <if test="delFlag == null ">and del_flag != 2</if>
            <if test="titleZh != null  and titleZh != ''">and title_zh = #{titleZh}</if>
            <if test="titleEn != null  and titleEn != ''">and title_en = #{titleEn}</if>
            <if test="sketchZh != null  and sketchZh != ''">and sketch_zh = #{sketchZh}</if>
            <if test="sketchEn != null  and sketchEn != ''">and sketch_en = #{sketchEn}</if>
            <if test="contentZh != null  and contentZh != ''">and content_zh = #{contentZh}</if>
            <if test="contentEn != null  and contentEn != ''">and content_en = #{contentEn}</if>
            <if test="type != null ">and type = #{type}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="objectId != null ">and object_id = #{objectId}</if>
            <if test="isRead != null ">and is_read = #{isRead}</if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectUserMessageById" parameterType="Long" resultMap="UserMessageResult">
        <include refid="selectUserMessageVo"/>
        where id = #{id}
    </select>

    <select id="selectUnReadNum" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM t_user_message
        WHERE del_flag = 1
          AND user_id = #{userId}
          AND is_read = 2
    </select>

    <select id="selectLatestMessage" resultType="com.ruoyi.mgkf.domain.UserMessage">
        SELECT *
        FROM t_user_message
        WHERE del_flag = 1
          AND user_id = #{userId}
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <insert id="insertUserMessage" parameterType="UserMessage" useGeneratedKeys="true" keyProperty="id">
        insert into t_user_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="delFlag != null">del_flag,</if>
            <if test="createDept != null">create_dept,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="titleZh != null">title_zh,</if>
            <if test="titleEn != null">title_en,</if>
            <if test="sketchZh != null">sketch_zh,</if>
            <if test="sketchEn != null">sketch_en,</if>
            <if test="contentZh != null">content_zh,</if>
            <if test="contentEn != null">content_en,</if>
            <if test="type != null">type,</if>
            <if test="userId != null">user_id,</if>
            <if test="objectId != null">object_id,</if>
            <if test="isRead != null">is_read,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createDept != null">#{createDept},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="titleZh != null">#{titleZh},</if>
            <if test="titleEn != null">#{titleEn},</if>
            <if test="sketchZh != null">#{sketchZh},</if>
            <if test="sketchEn != null">#{sketchEn},</if>
            <if test="contentZh != null">#{contentZh},</if>
            <if test="contentEn != null">#{contentEn},</if>
            <if test="type != null">#{type},</if>
            <if test="userId != null">#{userId},</if>
            <if test="objectId != null">#{objectId},</if>
            <if test="isRead != null">#{isRead},</if>
        </trim>
    </insert>

    <insert id="insertBatch" parameterType="UserMessage" useGeneratedKeys="true" keyProperty="id">
        insert into t_user_message
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="list != null and list.size() > 0">
                <if test="list[0].delFlag != null">del_flag,</if>
                <if test="list[0].createDept != null">create_dept,</if>
                <if test="list[0].createBy != null">create_by,</if>
                <if test="list[0].createTime != null">create_time,</if>
                <if test="list[0].updateBy != null">update_by,</if>
                <if test="list[0].updateTime != null">update_time,</if>
                <if test="list[0].titleZh != null">title_zh,</if>
                <if test="list[0].titleEn != null">title_en,</if>
                <if test="list[0].sketchZh != null">sketch_zh,</if>
                <if test="list[0].sketchEn != null">sketch_en,</if>
                <if test="list[0].contentZh != null">content_zh,</if>
                <if test="list[0].contentEn != null">content_en,</if>
                <if test="list[0].type != null">type,</if>
                <if test="list[0].userId != null">user_id,</if>
                <if test="list[0].objectId != null">object_id,</if>
                <if test="list[0].isRead != null">is_read,</if>
            </if>
        </trim>
        values
        <foreach collection="list" item="item" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="item.delFlag != null">#{item.delFlag},</if>
                <if test="item.createDept != null">#{item.createDept},</if>
                <if test="item.createBy != null">#{item.createBy},</if>
                <if test="item.createTime != null">#{item.createTime},</if>
                <if test="item.updateBy != null">#{item.updateBy},</if>
                <if test="item.updateTime != null">#{item.updateTime},</if>
                <if test="item.titleZh != null">#{item.titleZh},</if>
                <if test="item.titleEn != null">#{item.titleEn},</if>
                <if test="item.sketchZh != null">#{item.sketchZh},</if>
                <if test="item.sketchEn != null">#{item.sketchEn},</if>
                <if test="item.contentZh != null">#{item.contentZh},</if>
                <if test="item.contentEn != null">#{item.contentEn},</if>
                <if test="item.type != null">#{item.type},</if>
                <if test="item.userId != null">#{item.userId},</if>
                <if test="item.objectId != null">#{item.objectId},</if>
                <if test="item.isRead != null">#{item.isRead},</if>
            </trim>
        </foreach>
    </insert>

    <update id="updateUserMessage" parameterType="UserMessage">
        update t_user_message
        <trim prefix="SET" suffixOverrides=",">
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createDept != null">create_dept = #{createDept},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="titleZh != null">title_zh = #{titleZh},</if>
            <if test="titleEn != null">title_en = #{titleEn},</if>
            <if test="sketchZh != null">sketch_zh = #{sketchZh},</if>
            <if test="sketchEn != null">sketch_en = #{sketchEn},</if>
            <if test="contentZh != null">content_zh = #{contentZh},</if>
            <if test="contentEn != null">content_en = #{contentEn},</if>
            <if test="type != null">type = #{type},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="objectId != null">object_id = #{objectId},</if>
            <if test="isRead != null">is_read = #{isRead},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="updateReadByUserId">
        UPDATE t_user_message
        SET is_read = 1
        WHERE is_read = 2 AND user_id = #{userId}
    </update>

    <delete id="deleteUserMessageById" parameterType="Long">
        delete
        from t_user_message
        where id = #{id}
    </delete>

    <delete id="deleteUserMessageByIds" parameterType="String">
        delete from t_user_message where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>