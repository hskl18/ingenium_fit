<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mgkf.mapper.LeaveWordSubMapper">
    
    <resultMap type="LeaveWordSub" id="LeaveWordSubResult">
        <result property="id"    column="id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createDept"    column="create_dept"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="sendUserId"    column="send_user_id"    />
        <result property="leaveWordId"    column="leave_word_id"    />
        <result property="messageContent"    column="message_content"    />
        <result property="messageType"    column="message_type"    />
        <result property="isRead"    column="is_read"    />
        <result property="duration"    column="duration"    />
    </resultMap>

    <sql id="selectLeaveWordSubVo">
        select id,
               create_by,
               create_time,
               update_by,
               update_time,
               create_dept,
               del_flag,
               send_user_id,
               leave_word_id,
               message_content,
               message_type,
               is_read,
               duration
        from t_leave_word_sub
    </sql>

    <select id="selectLeaveWordSubList" parameterType="LeaveWordSub" resultMap="LeaveWordSubResult">
        <include refid="selectLeaveWordSubVo"/>
        <where>  
            <if test="delFlag != null "> and del_flag = #{delFlag}</if>
            <if test="delFlag == null "> and del_flag != 2</if>
            <if test="sendUserId != null "> and send_user_id = #{sendUserId}</if>
            <if test="leaveWordId != null "> and leave_word_id = #{leaveWordId}</if>
            <if test="messageContent != null  and messageContent != ''"> and message_content = #{messageContent}</if>
            <if test="messageType != null "> and message_type = #{messageType}</if>
            <if test="isRead != null "> and is_read = #{isRead}</if>
            <if test="createStartTime != null">
                and create_time >= #{createStartTime}
            </if>
            <if test="createEndTime != null">
                and create_time <![CDATA[<=]]> #{createEndTime}
            </if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectLeaveWordSubById" parameterType="Long" resultMap="LeaveWordSubResult">
        <include refid="selectLeaveWordSubVo"/>
        where id = #{id}
    </select>

    <select id="selectLatestMessageByLeaveWordIdList" resultType="com.ruoyi.mgkf.domain.LeaveWordSub">
        SELECT t.*
        FROM (
        SELECT
        *,
        ROW_NUMBER() OVER (
        PARTITION BY leave_word_id
        ORDER BY create_time DESC
        ) AS rn
        FROM t_leave_word_sub
        WHERE del_flag = 1
        <if test="leaveWordIdList != null and leaveWordIdList.size() > 0">
            AND leave_word_id IN
            <foreach item="id" collection="leaveWordIdList" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        ) t
        WHERE t.rn = 1;
    </select>

    <select id="selectUnReadMessageByLeaveWordIdList" resultType="com.ruoyi.mgkf.domain.LeaveWordSub">
        SELECT * FROM t_leave_word_sub
        WHERE del_flag = 1 AND is_read = 2 AND send_user_id != #{userId}
        <if test="leaveWordIdList != null and leaveWordIdList.size() > 0">
            AND leave_word_id IN
            <foreach item="id" collection="leaveWordIdList" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
    </select>
    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(*) FROM t_leave_word_sub WHERE del_flag != 2
    </select>

    <insert id="insertLeaveWordSub" parameterType="LeaveWordSub">
        insert into t_leave_word_sub
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createDept != null">create_dept,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="sendUserId != null">send_user_id,</if>
            <if test="leaveWordId != null">leave_word_id,</if>
            <if test="messageContent != null">message_content,</if>
            <if test="messageType != null">message_type,</if>
            <if test="isRead != null">is_read,</if>
            <if test="duration != null">duration,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createDept != null">#{createDept},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="sendUserId != null">#{sendUserId},</if>
            <if test="leaveWordId != null">#{leaveWordId},</if>
            <if test="messageContent != null">#{messageContent},</if>
            <if test="messageType != null">#{messageType},</if>
            <if test="isRead != null">#{isRead},</if>
            <if test="duration != null">#{duration},</if>
        </trim>
    </insert>

    <update id="updateLeaveWordSub" parameterType="LeaveWordSub">
        update t_leave_word_sub
        <trim prefix="SET" suffixOverrides=",">
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createDept != null">create_dept = #{createDept},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="sendUserId != null">send_user_id = #{sendUserId},</if>
            <if test="leaveWordId != null">leave_word_id = #{leaveWordId},</if>
            <if test="messageContent != null">message_content = #{messageContent},</if>
            <if test="messageType != null">message_type = #{messageType},</if>
            <if test="isRead != null">is_read = #{isRead},</if>
        </trim>
        where id = #{id}
    </update>

    <update id="readMessage">
        update t_leave_word_sub
        set is_read = 1
        where leave_word_id = #{leaveWordId} and send_user_id = #{userId} and is_read = 2
    </update>

    <delete id="deleteLeaveWordSubById" parameterType="Long">
        delete from t_leave_word_sub where id = #{id}
    </delete>

    <delete id="deleteLeaveWordSubByIds" parameterType="String">
        delete from t_leave_word_sub where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>