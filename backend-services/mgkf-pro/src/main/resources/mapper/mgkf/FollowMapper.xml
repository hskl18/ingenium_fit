<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.mgkf.mapper.FollowMapper">
    
    <resultMap type="Follow" id="FollowResult">
        <result property="id"    column="id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createDept"    column="create_dept"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="userId"    column="user_id"    />
        <result property="followUserId"    column="follow_user_id"    />
    </resultMap>

    <sql id="selectFollowVo">
        select id, create_by, create_time, update_by, update_time, create_dept, del_flag, user_id, follow_user_id from t_follow
    </sql>

    <select id="selectFollowList" parameterType="Follow" resultMap="FollowResult">
        <include refid="selectFollowVo"/>
        <where>  
            <if test="delFlag != null "> and del_flag = #{delFlag}</if>
            <if test="delFlag == null "> and del_flag != 2</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="followUserId != null "> and follow_user_id = #{followUserId}</if>
            <if test="userIdList != null and userIdList.size() > 0">
                and user_id in
                <foreach item="item" collection="userIdList" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="followUserIdList != null and followUserIdList.size() > 0">
                and follow_user_id in
                <foreach item="item" collection="followUserIdList" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="createStartTime != null">
                and create_time >= #{createStartTime}
            </if>
            <if test="createEndTime != null">
                and create_time <![CDATA[<=]]> #{createEndTime}
            </if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectFollowById" parameterType="Long" resultMap="FollowResult">
        <include refid="selectFollowVo"/>
        where id = #{id}
    </select>

    <select id="selectFollowingNum" resultType="java.lang.Long">
        select count(*) from t_follow where del_flag = 1 and user_id = #{userId}
    </select>

    <select id="selectFollowersNum" resultType="java.lang.Long">
        select count(*) from t_follow where del_flag = 1 and follow_user_id = #{userId}
    </select>

    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(*) FROM t_follow WHERE del_flag != 2
    </select>

    <insert id="insertFollow" parameterType="Follow">
        insert into t_follow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createDept != null">create_dept,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="userId != null">user_id,</if>
            <if test="followUserId != null">follow_user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createDept != null">#{createDept},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="userId != null">#{userId},</if>
            <if test="followUserId != null">#{followUserId},</if>
         </trim>
    </insert>

    <insert id="addFollow">
        insert into t_follow (create_time, update_time, user_id, follow_user_id)
        VALUES (#{createTime}, #{updateTime}, #{userId}, #{followUserId})
        ON DUPLICATE KEY
            UPDATE del_flag    = IF(del_flag = 1, 2, 1),
                   create_time = #{createTime},
                   update_time = #{updateTime}
    </insert>

    <update id="updateFollow" parameterType="Follow">
        update t_follow
        <trim prefix="SET" suffixOverrides=",">
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createDept != null">create_dept = #{createDept},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="followUserId != null">follow_user_id = #{followUserId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFollowById" parameterType="Long">
        delete from t_follow where id = #{id}
    </delete>

    <delete id="deleteFollowByIds" parameterType="String">
        delete from t_follow where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>